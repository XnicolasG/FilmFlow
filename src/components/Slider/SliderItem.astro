---
const { movies } = Astro.props;

---

{
    movies.map((movie: any) => (
        <div class="item text-white">
            <img src={movie.image} alt={movie.name} />
            <article class="content">
                <p>{movie.name}</p>
                <p>{movie.year}</p>
                <p>{movie.genre}</p>
                <p>{movie.about}</p>
            </article>
        </div>
    ))
}
